<%= tinymce %>
<div class="page-header">
  <%= link_to challenges_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_challenge_path(@challenge), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show challenge</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @challenge.name %></dd>

  <dt>Description:</dt>
  <dd><%= raw @challenge.description %></dd>

  <dt>Solutions:</dt>
  <dd>
    <% @challenge.solutions.each do |solution| %>
      <%= solution.content %>
    <% end %>
  </dd>

  <dt>Language:</dt>
  <dd><%= @challenge.language %></dd>

  <dt>Point:</dt>
  <dd><%= @challenge.point %></dd>

</dl>
